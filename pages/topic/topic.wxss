.container {
    display: flex;
    flex-direction: column;
    justify-content:flex-start;
    background-color: #f8f8f8;
    padding-top: 10px;
}

.header {
    font-size: 24px;
    padding: 20px;
    background-color: #f8f8f8;
    margin-top: 0%;
}

.chat-box {
    flex: 1;
    overflow-y: auto;
    padding: 10px;
    width: 90%;
    height: 100%;
    background-color: #f8f8f8;
}

.message {
    margin-bottom: 10px;
    margin-right: 15px;
}

.user {
    font-weight: bold;   
    text-align: right;
}

.text {
    text-align: right;
    border-radius: 10px;
    padding: 5px;
    background-color: #f7c98e;
    margin-left: 0%;
    width: 100%;
}

.userAI {
    font-weight: bold;   
    text-align: left;
}

.textAI {
    text-align: left;
    border-radius: 10px;
    padding: 5px;
    /*background-color: #FFA31A;*/
    background-color:white;
    width: 100%;
}


.chat-input-wrap {
	display: flex;
	column-gap: 12px;
	align-items: flex-end;
	padding: 0 12px;

	position: absolute;
	bottom: calc(env(safe-area-inset-bottom) + 10rpx);
	left: 0;
	right: 0;
}

.chat-input {
	flex: 1;
	display: flex;
	column-gap: 4px;
	align-items: flex-end;
	background-color: #fff;
	max-height: 150px;
	overflow: hidden;
	border-radius: 12px;
	fill: #fff;
	filter: drop-shadow(0px 4px 20px rgba(0, 0, 0, 0.25));
}

.chat-input .textarea {
	flex: 1;
	/* padding: 24rpx 24rpx !important; */
	border-radius: 32rpx;

}