.container {
    padding: 20rpx;
}

.setting-item {
    margin-bottom: 60rpx;
    padding: 20rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    width: 100%;
}

.title {
    font-size: 32rpx;
    color: #d9534f;
    margin-bottom: 20rpx;
    margin-left: 10rpx;
}

.radio-group {
    display: flex;
    flex-direction: column;
    margin-left: 70rpx;
}

.radio {
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.radio radio {
    margin-right: 30rpx;
}

radio .wx-radio-input {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
    border: 1px solid #f99838 !important;
    background: white;
}


radio .wx-radio-input.wx-radio-input-checked::before {
    border-radius: 50%;
    width: 24rpx;
    height: 24rpx;
    line-height: 24rpx;
    text-align: center;
    font-size: 0;
    background: linear-gradient(#fcc33b, #f6703f);
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

.tab-bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    background-color: #ffffff;
    border-top: 1px solid #e7e7e7;
}

.tab-bar-item {
    flex: 1;
    text-align: center;
    padding: 10rpx 0;
}

.icon {
    width: 50rpx;
    height: 50rpx;
}

.active {
    color: #d9534f;
}